@model TP_final.Models.films

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Films</h4>
<hr />
<div class="row" style="display: flex;justify-content:space-around;">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Ajouter la previsualisation d'une photo de profile-->
            <div class="form-group text-center">
                <img id="PhotoProfilePreview" style="max-width: 530px;min-height: 530px;height: 400px;" />
            </div>
            <!--Fin-->
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <input asp-for="Photo" class="form-control" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="filmCategorie" class="control-label"></label>

                <select name="filmCategorie" id="filmCategorie" class="form-control">
                    <option value="Action">Action</option>
                    <option value="Comedie">Comedie</option>
                    <option value="Aventure">Aventure</option>
                    <option value="Amour">Amour</option>
                    <option value="Horreur">Horreur</option>
                    <option value="Documentation">Documentation</option>
                    <option value="Animation">Animation</option>
                </select>
                <span asp-validation-for="filmCategorie" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="debut" class="control-label"></label>
            <input asp-for="debut" class="form-control" />
            <span asp-validation-for="debut" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fin" class="control-label"></label>
            <input asp-for="Fin" class="form-control" />
            <span asp-validation-for="Fin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="prix" class="control-label"></label>
            <input asp-for="prix" class="form-control" />
            <span asp-validation-for="prix" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-around" style="padding-top: 20px; padding-bottom : 20px">
            <div class="form-group">
               <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-success align-middle" asp-action="Index">Back to file</a>
            </div>
        </form>
    </div>
</div>


<!--Ajouter la previsualisation d'une photo de profile-->
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PhotoProfilePreview');
            output.src = $("#Photo").val();
        })
        // $("#Photo").on("change", function () {
        //     var output = document.getElementById('PhotoProfilePreview');
        //     output.src = $(this).val();
        // })
    </script>
}
<!--Fin-->