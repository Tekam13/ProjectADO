@model TP_final.Models.Acteur

@{
    ViewData["Title"] = "Details";
}

<h1>Details sur @Model.Nom</h1>

<hr />
<div class="row">

    <div class="col-md-4  bg-dark text-white" style="padding-top: 20px">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <!--Ajouter la previsualisation d'une photo de profile-->
            <div class="form-group text-center">
                <img id="PhotoProfilePreview" style="max-width:100px"/>
            </div>
            <!--Fin-->
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" readonly/>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" readonly />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bibloigraphie" class="control-label"></label>
            <input asp-for="bibloigraphie" class="form-control" readonly />
                <span asp-validation-for="bibloigraphie" class="text-danger"></span>
            </div>
        <div class="form-group d-flex justify-content-around" style="padding-top: 20px; padding-bottom : 20px">
            <a class="btn btn-outline-primary align-middle" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i>Modifier</a>
            <a class="btn btn-outline-success align-middle" asp-action="Index">Back to file</a>
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!--Ajouter la previsualisation d'une photo de profile-->
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PhotoProfilePreview');
            output.src = $("#Photo").val();
        })
        // $("#Photo").on("change", function () {
        //     var output = document.getElementById('PhotoProfilePreview');
        //     output.src = $(this).val();
        // })
    </script>
}
<!--Fin-->