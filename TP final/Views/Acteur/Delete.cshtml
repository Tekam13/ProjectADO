@model TP_final.Models.Acteur

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Diplome</h4>
<hr />
<div class="row">

    <div class="col-md-4  bg-dark" style="padding-top: 20px">
        <for asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Ajouter la previsualisation d'une photo de profile-->
            <div class="form-group text-center">
                <img id="PhotoProfilePreview" style="max-width:150px" />
            </div>
            <!--Fin-->
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bibloigraphie" class="control-label"></label>
                <input asp-for="bibloigraphie" class="form-control" />
                <span asp-validation-for="bibloigraphie" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-around" style="padding-top: 20px; padding-bottom : 20px">
                <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </for>
    </div>
</div>


<!--Ajouter la previsualisation d'une photo de profile-->
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PhotoProfilePreview');
            output.src = $this.val();
        })
        $("#Photo").on("change", function () {
            var output = document.getElementById('PhotoProfilePreview');
            output.src = $(this).val();
        })
    </script>
}
<!--Fin-->